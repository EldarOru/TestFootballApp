<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#23283C">
        <TextView
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/match_start_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="MATCH"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_team_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/match_start_tv"
            app:layout_constraintBottom_toTopOf="@id/home_team_iv"
            tools:text="CHECK" />
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/home_team_iv"
            app:layout_constraintBottom_toTopOf="@id/home_team_country_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_team_tv"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"/>
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_team_country_tv"
            app:layout_constraintTop_toBottomOf="@id/home_team_iv"
            app:layout_constraintBottom_toTopOf="@id/venue_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="CHECK"
            app:layout_constraintEnd_toEndOf="@id/home_team_iv"/>
        <TextView
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/away_team_tv"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/match_start_tv"
            app:layout_constraintBottom_toTopOf="@id/away_team_iv"
            tools:text="CHECK"/>
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/away_team_iv"
            app:layout_constraintBottom_toTopOf="@id/away_team_country_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/away_team_tv"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"/>
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/away_team_country_tv"
            app:layout_constraintTop_toBottomOf="@id/away_team_iv"
            app:layout_constraintBottom_toTopOf="@id/venue_name_tv"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="CHECK"
            app:layout_constraintStart_toStartOf="@id/away_team_iv"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="50sp"
            android:id="@+id/score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/home_team_iv"
            app:layout_constraintEnd_toStartOf="@id/away_team_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="1-3"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/venue_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/away_team_country_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/venue_city_tv"
            tools:text="NAME"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/venue_city_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="CITY"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>